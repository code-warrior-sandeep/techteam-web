<% layout("layouts/boilerplate.ejs") %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-lg border-0 rounded-4 bg-light">
        <div class="card-body p-4">
          <h2 class="card-title text-center mb-4 fw-bold text-primary">
            🔐 Welcome Back, Login here!
          </h2>

          <form action="/login" method="POST" class="needs-validation" novalidate>

            <!-- Username -->
            <div class="mb-3">
              <label for="username" class="form-label">🆔 User ID</label>
              <input
                type="text"
                name="username"
                id="username"
                class="form-control"
                placeholder="e.g. BCA2027..."
                required
              />
            </div>

            <!-- Password -->
            <div class="mb-3">
              <label for="password" class="form-label">🔒 Secret Password</label>
              <input
                type="password"
                name="password"
                id="password"
                class="form-control"
                placeholder="Silently type!!"
                required
              />
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-success w-100 mt-3">
              🚀 Log Me In!
            </button>

            <!-- Signup Prompt -->
            <p class="text-center mt-3 text-muted small">
              🤔 Don't have an account? <a href="/signup" class="text-decoration-none">Create one here!</a> 🎉
            </p>

          </form>

        </div>
      </div>
    </div>
  </div>
</div>
