<% if (success && success.length) { %>
  <div class="alert alert-success alert-dismissible fade show col-md-6 offset-md-3 shadow-sm" role="alert">
    <i class="fa-solid fa-circle-check me-2"></i>
    <strong>Yay! </strong> <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if (error && error.length) { %>
  <div class="alert alert-danger alert-dismissible fade show col-md-6 offset-md-3 shadow-sm" role="alert">
    <i class="fa-solid fa-circle-xmark me-2"></i>
    <strong>Oops! </strong> <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>
