<% layout("layouts/boilerplate.ejs") %>

<div class="container py-5">
  <!-- Page Header -->
  <div class="text-center mb-5">
    <h2 class="fw-bold display-4 text-primary">
      📬 Get in Touch with Us!
    </h2>
    <p class="text-muted fs-5">
      We'd love to hear from you. Drop a message and we'll get back to you as soon as possible! 💬
    </p>
  </div>

  <div class="row g-4">
    <!-- Contact Form -->
    <div class="col-lg-6">
      <div class="card border-0 shadow-lg rounded-4 bg-white">
        <div class="card-body p-4">
          <h4 class="text-success mb-4 fw-semibold">📝 Send a Message</h4>
          <form action="/contact" method="POST">
            <div class="mb-3">
              <label for="name" class="form-label">👤 Your Name</label>
              <input type="text" id="name" name="name" class="form-control" required />
              <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="mb-3">
              <label for="email" class="form-label">📧 Your Email</label>
              <input type="email" id="email" name="email" class="form-control" required />
            </div>

            <div class="mb-3">
              <label for="subject" class="form-label">🔖 Subject</label>
              <input type="text" id="subject" name="subject" class="form-control" required />
            </div>

            <div class="mb-4">
              <label for="message" class="form-label">💬 Message</label>
              <textarea id="message" name="message" rows="5" class="form-control" required></textarea>
            </div>

            <div class="text-end">
              <button type="submit" class="btn btn-primary px-4 rounded-pill shadow-sm">
                🚀 Send Message
              </button>
            </div>
          </form>

          <% if (success && success.length > 0) { %>
          <p class="alert alert-success mt-3"><%= success %></p>
          <% } %>
          <% if (error && error.length > 0) { %>
          <p class="alert alert-danger mt-3"><%= error %></p>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Contact Info and WhatsApp Help -->
    <div class="col-lg-6">
      <div class="card border-0 shadow-lg rounded-4 h-100 bg-light">
        <div class="card-body p-4 d-flex flex-column justify-content-between">
          <div>
            <h4 class="text-info fw-semibold mb-4">📞 Contact Information</h4>
            <ul class="list-unstyled fs-6">
              <li class="mb-3">
                <i class="fas fa-map-marker-alt me-2 text-danger"></i>
                <strong>BCA Tech Office</strong>Near DDU Gorakhpur University, Gorakhpur, UP
              </li>
              <li class="mb-3">
                <i class="fas fa-envelope me-2 text-warning"></i>
                <a href="mailto:bcatechteams@gmail.com" class="text-dark">bcatechteams@gmail.com</a>
              </li>
              
            </ul>
          </div>

          <!-- WhatsApp Assistance Card -->
          <div class="card bg-white border-0 shadow-sm mt-4 rounded-4">
            <div class="card-body text-center">
              <h5 class="fw-bold text-success mb-3">❗ User ID Request Help</h5>
              <p class="text-muted mb-2">
                If you get <strong>"User ID Not Found"</strong> during registration, your User ID may not be in our system.
              </p>
              <p>To add your details, please WhatsApp the following info:</p>
              <ul class="list-unstyled small text-start d-inline-block">
                <li>✅ <strong>Full Name</strong></li>
                <li>✅ <strong>Roll Number</strong></li>
                <li>✅ <strong>Course</strong></li>
                <li>✅ <strong>Pass Out Year</strong></li>
              </ul>
              <div class="mt-3">
                <a
                  href="https://wa.me/9453400198"
                  class="btn btn-success px-4 rounded-pill shadow-sm"
                  target="_blank"
                >
                  📱 Contact via WhatsApp
                </a>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

