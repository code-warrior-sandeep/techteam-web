<% layout("layouts/boilerplate.ejs") %>

<div class="container mt-5">
  <h3 class="mb-4 text-center fw-bold text-primary">
    👾 Username Universe 🌌
  </h3>
  <p class="text-center text-muted mb-4">
    Here's the full list of brave souls who dared to register 💪✨
  </p>

  <ul class="list-group shadow rounded-4 border border-1">
    <% allUsername.forEach(student => { %>
      <li class="list-group-item d-flex justify-content-between align-items-center bg-light mb-2 rounded-3 border-0 shadow-sm">
        <div class="d-flex align-items-center gap-3">
          <span class="badge bg-secondary rounded-pill">👤</span>
          <strong class="text-dark"><%= student.username %></strong>
        </div>

        <form method="POST" action="/admin/dashboard/show/<%= student._id %>?_method=DELETE" class="mb-0">
          <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill">
            ❌ Kick Out
          </button>
        </form>
      </li>
    <% }) %>
  </ul>
</div>
